extends layout
block content
    title= title
    #container
        h2 用户登录
        if response_message != null
            h3  #{response_message}
        form.form_horizon(name="form_login",action="/login",method="post")
            .formblock
                label(class="user_label",for="email")
                    span.required *
                    邮箱：
                input#email(type="text",name="email",value="#{email}")
            .formblock
                label(class="pwd_label",for="password")
                    span.required *
                    输入密码：
                input(type="password",name="password",id="password")
                br
            button#loginbtn.formbtn 登录
            &nbsp;
            a.return(href="/register") 注册
            &nbsp;
            a(href="/forgetPsd") 忘记密码

